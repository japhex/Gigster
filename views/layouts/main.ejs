<!doctype html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Example App</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" />
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" />
	<link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css" />
	<link href='http://fonts.googleapis.com/css?family=Gafata' rel='stylesheet' type='text/css' />
	<link href='http://fonts.googleapis.com/css?family=Raleway:400,800|Rock+Salt:400,800' rel='stylesheet' type='text/css' />
	<link href="/stylesheets/style.css" rel="stylesheet" />
</head>
<body>
	<header>
		<nav class="navbar navbar-default" role="navigation">
			<div class="container-fluid">
				<div class="nav navbar-header">
					<a class="navbar-brand" href="/">gigster</a>
					<ul class="nav navbar-nav">

						<% if (user == undefined) { %>
							<li><a href="/auth/facebook"><span class="fa fa-facebook"></span> Facebook</a>
						<%} else {%>
							<li><a href="#">Gig Calendar</a></li>
							<li><a href="#" data-action-form="add-gig" data-trigger="popup">Attend a show</a></li>
							<li><a href="#">Send gig request</a></li>
							<li>
								<a href="/profile"><span class="glyphicon glyphicon-user"></span> Gigs</a>
							</li>
						<% } %>

					</ul>

					<% if (user != undefined) { %>

					<ul class="nav navbar-nav pull-right">
						<li><a href="#" data-action-form="update-user" data-trigger="popup"><%= user.username == undefined ? user.facebook.name : user.username %></a></li>
						<li><p><span class="badge"><%= gigStack.length %></span> gigs!</p></li>
						<li><a href="/logout"><span class="glyphicon glyphicon-eject"></span> Logout</a></li>
					</ul>

					<% } %>
					
				</div>
			</div>
		</nav>
	</header>
	<div id="main" class="container">
		<%- body %>
	</div>
	<footer>
	</footer>
	<!-- Render new gig form -->
	<% include ../partials/models/gigs/_createGig.ejs %>
	<% include ../partials/models/gigs/_updateGigDetails.ejs %>
	<% include ../partials/models/user/_updateUserDetails.ejs %>
	<script src="//code.jquery.com/jquery-latest.js"></script>
	<script src="/javascript/jquery-ui-1.10.4.custom.min.js"></script>
	<script src="/javascript/main.js"></script>
</body>
</html>