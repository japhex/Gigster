<form action="/create" method="POST" role="form" class="popup action-form form-horizontal" id="add-gig">
	<fieldset>
		<input type="hidden" name="future" value="" />
		<div class="form-group">
			<label for="artist" class="col-sm-3 control-label">Artist:</label>
			<div class="col-sm-6">
				<input name="artist" class="form-control" />
			</div>
			<a href="#" class="lookup control-label btn btn-default">> Lookup</a>
		</div>
		<div class="form-group">
			<label for="venue" class="col-sm-3 control-label">Venue:</label>
			<div class="col-sm-6">
				<input name="venue" class="form-control" />
			</div>
			<a href="#" class="lookup control-label btn btn-default">> Lookup</a>
		</div>
		<div class="form-group">
			<label for="gigDate" class="col-sm-3 control-label">Gig Date:</label>
