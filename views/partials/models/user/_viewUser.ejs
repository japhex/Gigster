<% layout('/layouts/main') -%>

<section id="upcoming" class="gig-stack">
	<ul id="future-gigs">
		<% for(var i=0; i<futureGigStack.length; i++) {%>
			<li data-date="<%= futureGigStack[i].gig_date %>">
				<div class="ticket-container">
					<div class="display-date">
						<span class="static-value"><%= futureGigStack[i].gig_date %></span>
					</div>						
					<div class="event-detail ticket-artist">
						<span class="static-value artist-name"><%= futureGigStack[i].artist %></span>
						<span class="static-value venue-name"><%= futureGigStack[i].venue %></span>
					</div>
				</div>
			</li>
		<% } %>	

	</ul>
</section>

<section id="past" class="gig-stack">
	<ul id="past-gigs">
		<% for(var i=0; i<pastGigStack.length; i++) {%>
			<li data-date="<%= pastGigStack[i].gig_date %>">
				<div class="ticket-container">
					<div class="event-detail ticket-artist">
						<span class="static-value artist-name"><%= pastGigStack[i].artist %></span>
						<div class="event-detail ticket-venue">
							<span class="static-value"><%= pastGigStack[i].venue %></span>
						</div>								
					</div>
					<div class="display-date">
						<label class="hidden-update">Date:</label>
						<abbr>VOID: </abbr><span class="static-value past-date"><%= pastGigStack[i].gig_date %></span>
					</div>
					<!--<a class="app-action-change" href="/delete/<%= pastGigStack[i]._id %>">remove show</a> | <a class="app-action-change action-update" href="/update/<%= pastGigStack[i]._id %>">update show</a>-->
				</div>
			</li>
		<% } %>
	</ul>
</section>