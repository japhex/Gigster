<% if (user != undefined) { %>
	<div class="popup" id="update-user">
		<h3>Update user details</h3>
		<!-- LOGIN FORM -->
		<form action="/user/update/<%= user._id %>" method="post" class="action-form form-horizontal">
			<div class="form-group">
				<label>Name</label>
				<input type="text" class="form-control" name="name" value="<%= user.facebook.name %>" disabled />
			</div>
			<div class="form-group">
				<label>Email</label>
				<input type="email" class="form-control" name="email" value="<%= user.email %>" />
			</div>
			<div class="form-group">
				<label>Username</label>
				<input type="text" class="form-control" name="username" value="<%= user.username %>" />
			</div>
			<div class="form-group">
				<label>Last.fm Username</label>
				<input type="text" class="form-control" name="lastfm" value="<%= user.lastfm %>" />
			</div>
			<div class="form-group">
				<label>Find Me</label>
				<input type="button" value="Check Location" class="btn btn-warning control-button" data-findme />
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-warning btn-lg">Update</button>
			</div>
		</form>
	</div>
<% } %>